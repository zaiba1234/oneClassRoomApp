require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

  platform :ios, min_ios_version_supported  # This resolves to 12.4 for RN 0.80.1
  prepare_react_native_project!

# Use static frameworks for consistency
use_frameworks! :linkage => :static

target 'LearningSaint' do
  config = use_native_modules!

  # React Native setup
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,   # Hermes enabled
    :fabric_enabled => true    # New architecture enabled
  )

  # Firebase pods
  pod 'Firebase/Analytics'
  pod 'Firebase/Auth'

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # Adjust build settings for all pods
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = min_ios_version_supported
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end

    # Hermes-specific tweaks
    installer.pods_project.targets.each do |target|
      if target.name == 'React-RuntimeHermes'
        target.build_configurations.each do |config|
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'HERMES_ENABLE_DEBUGGER=1'
        end
      end
    end
  end
end
